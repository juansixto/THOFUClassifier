package DemoClassify;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.List;
import java.util.Properties;

import Qwordnet.QWordNetDB;

public class CorpusSecondGenerator {
	
	static int TestSplit = 20; //%
	int Num_Test = 0;
	int Num_Train = 0;
	
	
	public CorpusSecondGenerator(){
		
	}

	public void Generate(List<myResult> mRes) throws IOException
	{
		int CorpusMax= (mRes.size())*TestSplit/100;
		int Num_Test = 0;
		int Num_Train = 0;
		
		
		String  tFichero = "data/THOFUSecond.test";
		String  trFichero = "data/THOFUSecond.train";

		FileWriter  TrainFile = new FileWriter (trFichero);
		FileWriter  TestFile = new FileWriter (tFichero);

		PrintWriter  trainf = new PrintWriter (TrainFile);
		PrintWriter  testf = new PrintWriter (TestFile);
		
		
		double rnd = Math.random()*100;
		
		for(int n = 0; n<mRes.size();n++){
		rnd = Math.random()*100;
		if ((rnd > TestSplit) &&( Num_Test <=CorpusMax)){
		trainf.println(mRes.get(n).getOriRes()+"	" +mRes.get(n).getCalcRes());
		Num_Train++;}
		else{
			testf.println(mRes.get(n).getOriRes()+"	" +mRes.get(n).getCalcRes());
			
			//System.out.println(doc.getClassification() + " == " + doc.getRating() );
		Num_Test++;}
		}
		trainf.close();
		testf.close();
			}
		
	
}
